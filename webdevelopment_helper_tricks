	jQuery('.grader_question input[type=radio]').click(function(){
	    //alert("ok");
		jQuery(this).parent('.grader_question').find('.next').prop('disabled', false);
	});
	
	function goQuestion(qnID){
		jQuery('.question').hide();
		jQuery('#'+qnID).show();
	}
	
	function getForm(qnID){
		jQuery('.question').hide();
		jQuery('#'+qnID).show();
		total = 0;
		i = 0;
		jQuery('.question input[type=radio]').each(function(){
			
			if(jQuery(this).is(':checked')) {
			    //alert("ok");
				val = jQuery(this).val();
				total = parseInt(total) + parseInt(val);
				//alert(total);
					i++; // ONLY NEED WHEN WE NEED TO SEND ind.Question score.
			    jQuery('#score'+i).val(val); 
				/****/
			}
		});
		jQuery('#your-score').val(total); 
	
	
	}
	

	
	function getReport(){
		qnID = 'qn_report';
		
		total = 0;
		j= 0;
		jQuery('.question input[type=radio]').each(function(){
			
			if(jQuery(this).is(':checked')) { 
			    //alert("ok");
				val = jQuery(this).val();
				total = parseInt(total) + parseInt(val);
				j++;
			}
			
			if (parseInt(val) == 1){
			    jQuery('img.first'+j+'.tick').removeClass('hidden');
			} else {
			    jQuery('img.first'+j+'.cross').removeClass('hidden');   
			}
			
		});
		
		//alert(total);
		percentage = (total / 7 ) * 100;
		
		jQuery('.count').html(total + ' out of 7 ');
		jQuery('.question').hide();
		jQuery('#'+qnID).show();
		jQuery('#qn_report_bar span').width(percentage+'%');
		
	
		
