jQuery( document ).ready(function() {
function checkWidth() {
        var windowSize = $(window).width();

        if (windowSize >= 961) {
            $(window).scroll(function() {
        var scroll = $(window).scrollTop();
        if (scroll >= 60) {
            $("#main_header").addClass('smaller');
  
        } else {
            $("#main_header").removeClass("smaller");
        }
    });
        } else{
   $(window).scroll(function() {
        var scroll = $(window).scrollTop();
        if (scroll >= 6000) {
            $("#main_header").addClass('smaller');
  
        } else {
            $("#main_header").removeClass("smaller");
        }
    });
   } 
    }
    // Execute on load
    checkWidth();
    // Bind event listener
    $(window).resize(checkWidth)
	
	});
	


jQuery( document ).ready(function(e) {
jQuery('.grader_question input[type=radio]').click(function(){
        //alert("ok");
	//	jQuery(this).parent('.question').find('.next').prop('disabled', false);
    	//e.preventDefault();
    	if($(this).attr("name")=="owner"){
           jQuery("button.next1").removeAttr("disabled");
        }
        if($(this).attr("name")=="bookkeeping"){
           jQuery("button.next2").removeAttr("disabled");
        }
        if($(this).attr("name")=="cashflow"){
           jQuery("button.next3").removeAttr("disabled");
        }
        if($(this).attr("name")=="invoicing"){
           jQuery("button.next4").removeAttr("disabled");
        }
        if($(this).attr("name")=="payroll"){
           jQuery("button.next5").removeAttr("disabled");
        }
        if($(this).attr("name")=="security"){
           jQuery("button.next6").removeAttr("disabled");
        }
        if($(this).attr("name")=="pay"){
           jQuery("button.next7").removeAttr("disabled");
        }
		
	});
	
	});
	
