 <script>
jQuery(document).ready(function ($) {                           
 $('.bottom_form').hide();
 $('.question_body_img').hide();
 $('#cform').hide();
  $('#qn_report').hide();
$("a.assessment_btn").click(function(event) {
  event.preventDefault();
  $(this).parents('.top_form').remove();

  $('#qn_1').hide();
  $('#qn_2').hide();
  $('#qn_3').hide();
  $('#qn_4').hide();
  $('#qn_5').hide();
  $('#qn_6').hide();
  $('.bottom_form').show();
  $('.question_body_img').show();
  $('.body_img').hide();
});

    
  $(".quiz_common").hide();  
 $('input[type="radio"]').click(function(){
     //lert("ok");
        if($(this).attr("class")=="owner1"){
            $(".quiz_common").not(".quiz1").hide();
            $(".quiz1").show();
            
        }
        if($(this).attr("class")=="owner2"){
            $(".quiz_common").not(".quiz2").hide();
            $(".quiz2").show();
        }
        
        if($(this).attr("class")=="bookkeeping1"){
            $(".quiz_common").not(".quiz3").hide();
            $(".quiz3").show();
        }
        if($(this).attr("class")=="bookkeeping2"){
            $(".quiz_common").not(".quiz4").hide();
            $(".quiz4").show();
        }
        
        if($(this).attr("class")=="cashflow1"){
            $(".quiz_common").not(".quiz5").hide();
            $(".quiz5").show();
        }
        if($(this).attr("class")=="cashflow2"){
            $(".quiz_common").not(".quiz6").hide();
            $(".quiz6").show();
        }
        
        if($(this).attr("class")=="invoicing1"){
            $(".quiz_common").not(".quiz7").hide();
            $(".quiz7").show();
        }
        if($(this).attr("class")=="invoicing2"){
            $(".quiz_common").not(".quiz8").hide();
            $(".quiz8").show();
        }
        
        if($(this).attr("class")=="payroll1"){
            $(".quiz_common").not(".quiz9").hide();
            $(".quiz9").show();
        }
        if($(this).attr("class")=="payroll2"){
            $(".quiz_common").not(".quiz10").hide();
            $(".quiz10").show();
        }
         if($(this).attr("class")=="security1"){
            $(".quiz_common").not(".quiz11").hide();
            $(".quiz11").show();
        }
        if($(this).attr("class")=="security2"){
            $(".quiz_common").not(".quiz12").hide();
            $(".quiz12").show();
        }
        
        if($(this).attr("class")=="pay1"){
            $(".quiz_common").not(".quiz13").hide();
            $(".quiz13").show();
        }
        if($(this).attr("class")=="pay2"){
            $(".quiz_common").not(".quiz14").hide();
            $(".quiz14").show();
        }
    });
    
    
});                           

</script>

