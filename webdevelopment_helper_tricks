$('#Citoc_popup_outer').hide();
$("a.query-links").click(function(event) {
  event.preventDefault();
  $(this).parents('#quiz_btn_popupformouter').remove();
  $('#Citoc_popup_outer').show();
});

$('ol.custom_indicator li').on('click', function(){
    $('ol.custom_indicator li').removeClass('selected');
    //alert("selected");
    $(this).addClass('selected');
});


$('ol.custom_indicator li').on('click', function(){
    $('ol.custom_indicator li').removeClass('selected');
    //alert("selected");
    $(this).addClass('selected');
});
});
    
